{% extends 'base.html.twig' %}
{% block body_id 'resident_index' %}
{% block main %}
    <h1>Residents</h1>
    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Username</th>
                <th scope="col">Firstname</th>
                <th scope="col">Surname</th>
                <th scope="col"><i class="fa fa-calendar" aria-hidden="true"></i> Birthday</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resident in residents %}
            <tr>
                <td>{{ resident.id }}</td>
                <td>{{ resident.username }}</td>
                <td>{{ resident.firstname }}</td>
                <td>{{ resident.surname }}</td>
                <td>{{ resident.birthday }}</td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('resident_view', {id: resident.id}) }}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-eye" aria-hidden="true"></i> View
                        </a>
                        <a href="{{ path('resident_edit', {id: resident.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> Edit
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">No Residents found</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('resident_add') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> Add resident
        </a>
    </div>
{% endblock %}
