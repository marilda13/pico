{% extends 'base.html.twig' %}

{% block body_id 'homepage' %}

{% block header %}{% endblock %}
{% block footer %}{% endblock %}

{% block body %}
    <div class="page-header">
        <h1>Welcome to the Springfield residents management application</h1>
    </div>

    <div class="row">
        <div class="col-sm">
            <div class="jumbotron">
                <p>
                    Browse the residents dataset
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('resident_index') }}">
                        <i class="fa fa-users" aria-hidden="true"></i> Browse
                    </a>
                </p>
            </div>
        </div>
        <div class="col-sm">
            <div class="jumbotron">
                <p>
                   Lookup quote API: /resident/lookup/{ch}/{count}
                </p>
                <p>
                    <a class="btn btn-primary btn-lg" href="{{ path('quote_lookup', {'ch': 'ho', 'count': '10'}) }}">
                        <i class="fa fa-search" aria-hidden="true"></i> Search
                    </a>
                </p>
            </div>
        </div>
    </div>
{% endblock %}
